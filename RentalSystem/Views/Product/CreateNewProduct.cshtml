@model RentalSystemModels.ProductModel

@{
    ViewBag.Title = "CreateNewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><strong>Post Your Advertisement</strong></h2>

@using (Html.BeginForm("InsertProduct", "Product"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProductName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProductDescription)
        @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProductDescription)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RentStartDate)
        @Html.TextBoxFor(model => model.RentStartDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.RentStartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RentEndDate)
        @Html.TextBoxFor(model => model.RentEndDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.RentEndDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ProductUnitPrice)
        @Html.TextBoxFor(model => model.ProductUnitPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProductUnitPrice)
    </div>

    

    <div class="checkbox">

        @Html.CheckBoxFor(model => model.ProductAvailability) Is The Product Available?
    </div>
    @*@Html.HiddenFor(m => m.Id)*@
    @Html.AntiForgeryToken()
    <button class="btn btn-primary">SAVE</button>
}
<br />
<br />
<div>
    @Html.ActionLink("Back to List", "Get", "Products")

</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


